<h1>All Restaurants</h1>

<%= link_to "Add new restaurant", new_restaurant_path, class: "btn btn-primary" %>

<ul>
  <% @restaurants.each do |restaurant| %>
    <li>
      <div>
        <%= restaurant.name %>
      </div>
      <div>
        <%= restaurant.category %> || <%= restaurant.phone_number %>
      </div>
      <div>
        <%= link_to "View more details", restaurant_path(restaurant) %>
      </div>
    </li>
  <% end %>
</ul>
